<apex:variable id="nameFixed" value="{!SUBSTITUTE(SUBSTITUTE(Contract.Name,'&','%26'),' ','+')}" var="nameFix"/>

    <apex:outputPanel layout="block" rendered="{!hideRefreshBT}" style="width: 750px; background-color: rgb(242, 249, 255); text-align: center; font-size: 20pt; color: rgb(37,113,170); font-family: 'Open Sans'; font-weight: bold;">

<span style="{!IF(Contract.Contract_PDF_URL__c='','display:none;','')}">
<a href="{!Contract.Contract_PDF_URL__c}" target="_blank" style="text-decoration:none;">
<apex:image id="PDF" url="https://upload.wikimedia.org/wikipedia/commons/6/6c/PDF_icon.svg" width="20"/>
</a>
</span>
          <a href="/{!Contract.Id}" target="_top" style="text-decoration:none; color: rgb(37,113,170);">
